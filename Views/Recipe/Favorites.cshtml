@model RecipeApp.Web.Models.PagedResultDto<RecipeApp.Web.Models.RecipeDto>
@{
    ViewData["Title"] = "Favori Tariflerim";
}

<div class="container mt-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="fw-bold">
                <i class="bi bi-heart-fill text-danger"></i> Favori Tariflerim
            </h1>
            <p class="text-muted">Favori olarak işaretlediğiniz tariflere buradan ulaşabilirsiniz</p>
        </div>
    </div>

    <!-- Recipe Cards -->
    @if (Model.Items.Any())
    {
        <div class="row g-4">
            @foreach (var recipe in Model.Items)
            {
                <div class="col-md-4 col-lg-3">
                    <div class="card recipe-card h-100 shadow-sm">
                        @if (!string.IsNullOrEmpty(recipe.ImageUrl))
                        {
                            <img src="@recipe.ImageUrl" class="card-img-top" alt="@recipe.Name" style="height: 200px; object-fit: cover;">
                        }
                        else
                        {
                            <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                                <i class="bi bi-egg-fried" style="font-size: 4rem; color: #ccc;"></i>
                            </div>
                        }
                        <div class="card-body">
                            <h5 class="recipe-card-title">@recipe.Name</h5>
                            <p class="recipe-card-text">
                                @if (!string.IsNullOrEmpty(recipe.Description) && recipe.Description.Length > 80)
                                {
                                    @recipe.Description.Substring(0, 80)@:...
                                }
                                else
                                {
                                    @recipe.Description
                                }
                            </p>
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <small class="text-muted">
                                    <i class="bi bi-star-fill text-warning"></i> @recipe.AverageRating.ToString("0.0") (@recipe.RatingsCount)
                                </small>
                                <small class="badge bg-secondary category-badge">@recipe.Category</small>
                            </div>
                            <div class="d-flex gap-2">
                                <a asp-action="Details" asp-route-id="@recipe.Id" class="btn btn-primary btn-sm flex-fill">
                                    <i class="bi bi-eye"></i> Detay
                                </a>
                                <button class="btn btn-danger btn-sm" onclick="toggleFavorite('@recipe.Id')" data-recipe-id="@recipe.Id">
                                    <i class="bi bi-heart-fill"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Pagination -->
        @if (Model.TotalPages > 1)
        {
            <nav aria-label="Page navigation" class="mt-5">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(Model.HasPrevious ? "" : "disabled")">
                        <a class="page-link" asp-action="Favorites" asp-route-pageNumber="@(Model.PageNumber - 1)">
                            <i class="bi bi-chevron-left"></i> Önceki
                        </a>
                    </li>
                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                            <a class="page-link" asp-action="Favorites" asp-route-pageNumber="@i">@i</a>
                        </li>
                    }
                    <li class="page-item @(Model.HasNext ? "" : "disabled")">
                        <a class="page-link" asp-action="Favorites" asp-route-pageNumber="@(Model.PageNumber + 1)">
                            Sonraki <i class="bi bi-chevron-right"></i>
                        </a>
                    </li>
                </ul>
            </nav>
        }
    }
    else
    {
        <!-- Empty State -->
        <div class="row">
            <div class="col-12">
                <div class="text-center py-5">
                    <i class="bi bi-heart" style="font-size: 5rem; color: #ccc;"></i>
                    <h3 class="mt-4 text-muted">Henüz favori tarifin yok</h3>
                    <p class="text-muted mb-4">
                        Beğendiğin tarifleri favorilere ekleyerek buradan kolayca erişebilirsin
                    </p>
                    <a asp-action="Index" class="btn btn-primary btn-lg">
                        <i class="bi bi-search"></i> Tariflere Göz At
                    </a>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        // Reload page when favorite is toggled
        const originalToggleFavorite = window.toggleFavorite;
        window.toggleFavorite = async function(recipeId) {
            await originalToggleFavorite(recipeId);
            setTimeout(() => {
                location.reload();
            }, 1000);
        };
    </script>
}
