@model RecipeApp.Web.Models.PagedResultDto<RecipeApp.Web.Models.RecipeDto>
@inject RecipeApp.Web.Services.IAuthService AuthService
@{
    ViewData["Title"] = "Tarifler";
    var isAuthenticated = await AuthService.IsAuthenticatedAsync();
    var showCategories = ViewBag.CurrentCategory == null; // Kategori seçilmemişse kategorileri göster
    
    var categories = new[] {
        new { Name = "Ana Yemekler", Image = "https://images.unsplash.com/photo-1546069901-ba9599a7e63c?w=400", Category = 0 },
        new { Name = "Tatlılar", Image = "https://images.unsplash.com/photo-1563805042-7684c019e1cb?w=400", Category = 1 },
        new { Name = "Kahvaltılıklar", Image = "https://images.unsplash.com/photo-1533089860892-a7c6f0a88666?w=400", Category = 2 },
        new { Name = "İçecekler", Image = "https://images.unsplash.com/photo-1556679343-c7306c1976bc?w=400", Category = 3 }
    };
}

<div class="container-fluid px-4 py-4">
    @if (showCategories)
    {
        <!-- Category Grid - Ana Sayfa -->
        <div class="row mb-4">
            <div class="col-12">
                <h2 class="text-center mb-4" style="color: #6B4423; font-weight: bold;">Kategoriler</h2>
            </div>
        </div>
        <div class="row g-4 mb-5">
            @foreach (var cat in categories)
            {
                <div class="col-md-3 col-sm-6">
                    <a asp-action="Index" asp-route-category="@cat.Category" class="category-card-link">
                        <div class="category-card">
                            <img src="@cat.Image" class="category-image" alt="@cat.Name">
                            <div class="category-overlay">
                                <h3 class="category-name">@cat.Name</h3>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>

        <!-- Tüm Tarifler -->
        <div class="row mb-4">
            <div class="col-12">
                <h2 style="color: #6B4423; font-weight: bold;">
                    <i class="bi bi-book"></i> Tüm Tarifler
                </h2>
            </div>
        </div>
    }
    else if (ViewBag.CurrentCategory != null)
    {
        <!-- Kategori Başlığı -->
        <div class="row mb-4">
            <div class="col-md-8">
                <h2 style="color: #6B4423; font-weight: bold;">
                    <i class="bi bi-book"></i> @ViewBag.CurrentCategory Tarifleri
                </h2>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Tüm Kategoriler
                </a>
            </div>
            @if (isAuthenticated)
            {
                <div class="col-md-4 text-end">
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Yeni Tarif Ekle
                    </a>
                </div>
            }
        </div>
    }

    <!-- Recipe Cards -->
    @if (Model.Items.Any())
    {
        <div class="row g-4">
            @foreach (var recipe in Model.Items)
            {
                <div class="col-md-4 col-lg-3">
                    <div class="card recipe-card h-100 shadow-sm">
                        @if (!string.IsNullOrEmpty(recipe.ImageUrl))
                        {
                            <img src="@recipe.ImageUrl" class="card-img-top" alt="@recipe.Name" style="height: 200px; object-fit: cover;">
                        }
                        else
                        {
                            <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                                <i class="bi bi-egg-fried" style="font-size: 4rem; color: #ccc;"></i>
                            </div>
                        }
                        <div class="card-body">
                            <h5 class="recipe-card-title">@recipe.Name</h5>
                            <p class="recipe-card-text">
                                @if (!string.IsNullOrEmpty(recipe.Description) && recipe.Description.Length > 80)
                                {
                                    @recipe.Description.Substring(0, 80)@:...
                                }
                                else
                                {
                                    @recipe.Description
                                }
                            </p>
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <small class="text-muted">
                                    <i class="bi bi-clock"></i> @(recipe.PreparationTimeMinutes + recipe.CookingTimeMinutes) dk
                                </small>
                                <small class="badge bg-secondary category-badge">@recipe.Category</small>
                            </div>
                            <div class="d-flex gap-2">
                                <a asp-action="Details" asp-route-id="@recipe.Id" class="btn btn-sm flex-fill" style="background: #6B4423; color: white;">
                                    <i class="bi bi-eye"></i> Detay
                                </a>
                                @if (isAuthenticated)
                                {
                                    <button class="btn btn-outline-danger btn-sm @(recipe.IsFavorite ? "active" : "")"
                                            onclick="toggleFavorite('@recipe.Id')"
                                            data-recipe-id="@recipe.Id">
                                        <i class="bi bi-heart@(recipe.IsFavorite ? "-fill" : "")"></i>
                                    </button>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Pagination -->
        @if (Model.TotalPages > 1)
        {
            <nav aria-label="Page navigation" class="mt-5">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(Model.HasPrevious ? "" : "disabled")">
                        <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageNumber - 1)" asp-route-category="@ViewBag.CurrentCategory">
                            <i class="bi bi-chevron-left"></i> Önceki
                        </a>
                    </li>
                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                            <a class="page-link" asp-action="Index" asp-route-pageNumber="@i" asp-route-category="@ViewBag.CurrentCategory">@i</a>
                        </li>
                    }
                    <li class="page-item @(Model.HasNext ? "" : "disabled")">
                        <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageNumber + 1)" asp-route-category="@ViewBag.CurrentCategory">
                            Sonraki <i class="bi bi-chevron-right"></i>
                        </a>
                    </li>
                </ul>
            </nav>
        }
    }
    else
    {
        <div class="alert alert-info text-center mt-5">
            <i class="bi bi-info-circle"></i> Bu kategoride henüz tarif bulunmuyor.
            <div class="mt-3">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Tüm Kategoriler
                </a>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        // toggleFavorite fonksiyonu site.js'te global olarak tanımlı
    </script>
}
